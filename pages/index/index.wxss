/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: line;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.backgroundcolor{
  width: 100%;
  height: 190rpx;
  background-color: ghostwhite;
}

.logo {
  float: left;
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.backgroundtext{
  width: 40%;
  float: right;
  margin: 35rpx;
  color: #aaa;
  font-family: Georgia, 'Times New Roman', Times, serif
}

.backgroundlink{
  font-family: cursive;
  font-style: normal;
  font-size: 35rpx;
}

.whole{  
  background-color: green;  
  width:100%;  
  height:100%;  
} 

.piclink{
  width:100%;
  height:45px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.singlepiclink{
  width: 33.33%;
  height:100%;
}

.pic{
  width:90%;
  height:90%;
}

.picshow{
  width:300px;
  height:130px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.space{
  width:60%;
  height:50rpx;
}

.space1{
  width: 25rpx;
  height: 50rpx;
}